{
  "name": "kod-5-javascript-practice",
  "version": "1.0.0",
  "description": "",
  "main": "public/index.html",
  "scripts": {
    "init:folders": "mkdirp src/sass/{abstracts,base,components,layout,pages,themes,vendors} src/js src/assets public",
    "init:abstracts": "echo '// Variables' > src/sass/abstracts/_variables.scss && echo '// Mixins' > src/sass/abstracts/_mixins.scss && echo '// Functions' > src/sass/abstracts/_functions.scss && echo '@forward \"_variables\";\\n@forward \"_mixins\";\\n@forward \"_functions\";' > src/sass/abstracts/_index.scss",
    "init:base": "echo '// Reset' > src/sass/base/_reset.scss && echo '// Typography' > src/sass/base/_typography.scss && curl -s https://necolas.github.io/normalize.css/8.0.1/normalize.css > src/sass/base/_normalize.scss && echo '@forward \"_normalize\";\\n@forward \"_reset\";\\n@forward \"_typography\";' > src/sass/base/_index.scss",
    "init:indexes": "for folder in components layout pages themes vendors; do echo '// Index ' > src/sass/$folder/_index.scss; done",
    "init:main": "echo '@forward \"abstracts/_index\";\\n@forward \"base/_index\";\\n@forward \"components/_index\";\\n@forward \"layout/_index\";\\n@forward \"pages/_index\";\\n@forward \"themes/_index\";\\n@forward \"vendors/_index\";' > src/sass/main.scss",
    "init:html": "echo '<!DOCTYPE html><html><head><link rel=\"stylesheet\" href=\"css/main.css\"></head><body><h1>Hello!</h1><script src=\"js/main.js\"></script></body></html>' > src/index.html",
    "init:js": "echo 'console.log(\"JS ready\");' > src/js/main.js",
    "init:readme": "touch readme.md",
    "init:gitignore": "curl -s https://raw.githubusercontent.com/github/gitignore/main/Node.gitignore > .gitignore",
    "init:gitignore:custom": "echo \"public\" >> .gitignore",
    "init:prettier": "echo 'module.exports = {\\n  semi: true,\\n  singleQuote: true,\\n  trailingComma: \"es5\",\\n  printWidth: 80,\\n  tabWidth: 2,\\n  endOfLine: \"lf\",\\n};' > prettier.config.js",
    "init": "npm-run-all init:folders init:abstracts init:base init:indexes init:main init:html init:js init:readme init:gitignore init:gitignore:custom init:prettier",
    "clean": "rm -rf public && mkdir public",
    "build:sass": "sass --no-source-map src/sass:public/css",
    "build:copy:html": "copyfiles -u 1 src/*.html public",
    "build:copy:js": "copyfiles -u 1 src/js/**/* public",
    "build:copy:assets": "copyfiles -u 1 src/assets/**/* public",
    "build:copy": "npm-run-all build:copy:*",
    "postcss": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map",
    "build": "npm-run-all clean build:sass build:copy postcss",
    "watch:sass": "sass --no-source-map --watch src/sass:public/css",
    "watch:html": "onchange 'src/*.html' -- npm run build:copy:html",
    "watch:js": "onchange 'src/js/**/*' -- npm run build:copy:js",
    "watch:assets": "onchange 'src/assets/**/*' -- npm run build:copy:assets",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "dev": "npm-run-all build --parallel watch serve",
    "test:html": "html-validate 'src/**/*.html'",
    "format:check": "prettier --check 'src/**/*.{js,scss}'",
    "format:fix": "prettier --write 'src/**/*.{js,scss}'",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "npm-run-all --parallel test:html format:check lint"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^3.0.4",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "html-validate": "^8.0.0",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "prettier": "^3.0.0",
    "sass": "^1.70.0"
  }
}
